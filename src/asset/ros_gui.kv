FloatLayout:

    MDLabel:
        id: my_label
        text: "Hello World"
        halign: "center"
        size_hint: 1, 1
        pos_hint: {"center_x": .25, "center_y": 0.8}
    
    MDRaisedButton:
        id: my_button
        text: "Button"
        size_hint: 0.1, 0.1
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        on_press: app.my_function(*args)